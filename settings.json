{
  "permissions": {
    "allow": [
      "Edit(/**)",
      "Write(/**)",
      "WebFetch(domain:stackoverflow.com)",
      "WebSearch"
    ],
    "deny": [],
    "ask": [
      "Edit(/**/.*)",
      "Write(/**/.*)"
    ],
    "additionalDirectories": ["/tmp"],
    "defaultMode": "default"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/validate-bash/run.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notification-permission-prompt/run.sh"
          }
        ]
      }
    ]
  }
}
